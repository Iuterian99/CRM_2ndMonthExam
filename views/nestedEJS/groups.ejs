<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/css/nestedCSS/teachers.css" />
    <link rel="stylesheet" href="/assets/css/general.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Admin page</title>
  </head>
  <body>
    <%- include("../general/header.ejs") -%>
    <div class="container">
      <main class="main">
        <div class="row">
          <div class="col-2">
            <%- include("../general/sidebar.ejs", {page: "index"})%>
          </div>
          <div class="col-10">
            <h2 class="teacher-header text-center mt-3">Guruhlar</h2>
            <% for( let e of groups ) { %>
            <ul class="list-unstyled m-0 p-0 mt-3">
              <li class="ms-3">
                <div class="row">
                  <div class="col-1 addborder d-flex align-items-center">
                    <%= e.id %>
                  </div>
                  <div class="col-11 addborder d-flex align-items-center">
                    <h4 class="name mb-0 me-2">Nomi:</h4>
                    <%= e.name %>
                  </div>
                </div>
              </li>
            </ul>
            <% } %>
            <button
              class="addBtn w-100 mt-3"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasRight"
              aria-controls="offcanvasRight"
            >
              👩🏼‍🤝‍👩🏼 Yangi Guruh qo`shish 👩🏼‍🤝‍👩🏼
            </button>

            <div
              class="offcanvas offcanvas-end"
              tabindex="-1"
              id="offcanvasRight"
              aria-labelledby="offcanvasRightLabel"
            >
              <div class="offcanvas-header">
                <h5 class="teacher-header fs-3" id="offcanvasRightLabel">
                  👩🏼‍🤝‍👩🏼 Guruh qo`shish 👩🏼‍🤝‍👩🏼
                </h5>
                <button
                  type="button"
                  class="btn-close text-reset"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"
                ></button>
              </div>
              <div class="offcanvas-body">
                <form
                  action="/admin/groups"
                  method="POST"
                  enctype="application/x-www-form-urlencoded"
                >
                  <input
                    type="text"
                    class="form-control mb-3"
                    placeholder="Ismi"
                    name="name"
                  />
                  <button class="addBtn w-100 mx-auto" type="submit">
                    Qo`shish
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
